<div class="m-auto border rounded p-5">
  <div class="m-auto w-50">
    <h1 class="text-center">Create your secret</h1>
    <%= form_with model: @post do |f| %>
      <div class="d-flex flex-column mb-3">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="d-flex flex-column mb-3">
        <%= f.label :body, 'Add a new post here' %>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit 'Submit', class: 'btn btn-dark m-auto w-100 d-block' %>
      </div>
    <% end %>
  </div>
</div>
